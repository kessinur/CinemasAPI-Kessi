
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="">Create New</button><br /><br />
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Village Name
                </th>
                <th>
                    Theater Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Cinema Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                        <span class="error">Valid Name Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Address</label>
                        <input type="text" class="form-control" id="Address" placeholder="Address" />
                        <span class="error">Valid Address Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Village Name</label>
                        <select id="Villages" data-placement="Choose" class="form-control"></select>
                        <span class="error">Valid Village Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Theater Name</label>
                        <select id="Theaters" data-placement="Choose" class="form-control"></select>
                        <span class="error">Valid Theater Required</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validateInsertCinema();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="validateEditCinema();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearCinemaScreen();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Sweetalert/sweetalert.min.js"></script>
    <link href="~/Scripts/Sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Master/CinemaMaster/RetrievingCinema.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}