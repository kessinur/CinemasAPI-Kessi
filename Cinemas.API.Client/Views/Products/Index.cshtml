
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="">Create New</button><br /><br />
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Name
                </th>
                <th>
                    Variety
                </th>
                <th>
                    Description
                </th>
                <th>
                    Image
                </th>
                <th>
                    Price
                </th>
                <th>
                    Restaurant Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Product Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" id="Name" placeholder="Name" />
                        <span class="error">Valid Name Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Variety">Variety</label>
                        <select id="Variety" data-placement="Choose" class="form-control">
                            <option>Snack</option>
                            <option>Food</option>
                            <option>Beverage</option>
                        </select>
                        <span class="error">Valid Variety Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Description</label>
                        <textarea id="Description" class="form-control" placeholder="Please Insert Description Here..."></textarea>
                        <span class="error">Valid Description Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Image</label>
                        <input type="text" class="form-control" id="Image" placeholder="Image" />
                        <span class="error">Valid Image Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Price</label>
                        <input type="number" class="form-control" id="Price" placeholder="Price" />
                        <span class="error">Valid Price Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Name">Restaurant Name</label>
                        <select id="Restaurants" data-placement="Choose" class="form-control"></select>
                        <span class="error">Valid Restaurant Required</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validateInsertProduct();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="Edit();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearProductScreen();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Sweetalert/sweetalert.min.js"></script>
    <link href="~/Scripts/Sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Master/ProductMaster/RetrievingProduct.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
