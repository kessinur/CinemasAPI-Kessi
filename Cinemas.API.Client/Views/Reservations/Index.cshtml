
<div class="container">
    <hr />
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="">Create New</button><br /><br />
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Reservation Date
                </th>
                <th>
                    Total Price
                </th>
                <th>
                    User Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Village Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="TotalPrice">Total Price</label>
                        <input type="number" class="form-control" id="TotalPrice" placeholder="TotalPrice" />
                        <span class="error">Valid Total Price Required</span>
                    </div>
                    <div class="form-group">
                        <label for="Users">User Name</label>
                        <select id="Users" data-placement="Choose" class="form-control"></select>
                        <span class="error">Valid User Name Required</span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="Save" onclick="validateInsertReservation();">Add</button>
                <button type="button" class="btn btn-primary" id="Update" style="display:none;" onclick="GetById();">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearReservationScreen();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Sweetalert/sweetalert.min.js"></script>
    <link href="~/Scripts/Sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Transactions/ReservationMaster/RetrievingReservation.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}