
<div class="container">
    <hr />
    <table class="table table-hover" id="table">
        <thead>
            <tr>
                <th>
                    No.
                </th>
                <th>
                    Name
                </th>
                <th>
                    Variety
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Restaurant Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
    <div class="details">
        <h2>
            Order Products
        </h2>
        <table class="table table-responsive">
            <tr>
                <td>Restaurant</td>
                <td>Product</td>
                <td>Quantity</td>
                <td>Price</td>
                <td>&nbsp;</td>
                <td>Action</td>
            </tr>
            <tr class="mycontainer" id="mainrow">
                <td>
                    <select id="Restaurants" class="ir form-control" onchange="LoadProductByRestaurant(this)">
                        <option>Select</option>
                    </select>
                    <span class="error">Select Restaurant</span>
                </td>
                <td>
                    <select id="Products" class="product form-control">
                        <option>Select</option>
                    </select>
                    <span class="error">Select Product</span>
                </td>
                <td>
                    <input type="number" id="Quantity" class="quantity form-control" />
                    <span class="error">Valid quantity required</span>
                </td>
                <td>
                    <input type="text" class="price form-control" id="Prices" disabled="disabled" />
                </td>
                <td>
                    <input type="button" id="add" value="add" style="width:80px" class="btn btn-success" />
                </td>
            </tr>
        </table>
        <div id="orderItems">
            <table class="table table-responsive" id="orderdetailsItems"></table>
            <span id="orderItemError" style="color:red"></span>
        </div>
        <div style="padding:10px 0; text-align:right">
            <input id="submit" type="button" value="Save Order" class="btn btn-warning" style="padding:10px 20px" />
        </div>
    </div>
</div>
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">×</button>
                <h4 class="modal-title" id="myModalLabel">Product Form</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="Id">Id</label>
                        <input type="text" class="form-control" id="Id" placeholder="Id" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="name form-control" id="Name" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Variety">Variety</label>
                        <input type="text" class="variety form-control" id="Variety" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Name">Description</label>
                        <textarea id="Description" class="form-control" disabled="disabled"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="Price">Price</label>
                        <input type="text" class="form-control" id="Price" disabled="disabled" />
                    </div>
                    <div class="form-group">
                        <label for="Restaurants">Restaurant Name</label>
                        <input type="text" class="form-control" id="Restaurants" disabled="disabled" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="Order();">Add</button>
                <button type="button" class="btn btn-default" data-dismiss="modal" onclick="clearProductScreen();">Close</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/Scripts/Sweetalert/sweetalert.min.js"></script>
    <link href="~/Scripts/Sweetalert/sweetalert.css" rel="stylesheet" />
    <script src="~/Scripts/Datatables/jquery.dataTables.min.js"></script>
    <link href="~/Scripts/Datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/Transactions/OrderProductMaster/UserOrderProduct.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}
